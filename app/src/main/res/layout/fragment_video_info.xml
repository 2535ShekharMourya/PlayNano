<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_layout"
    android:background="@color/colorPrimary_black"
    app:layoutDescription="@xml/series_info_fragment_scene">


    <!-- Image Banner -->
    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shado"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_for_carousel"
        app:layout_constraintBottom_toBottomOf="@id/bannerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/series_player_back" />

    <!-- Series Name -->
    <TextView
        android:id="@+id/seriesName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_500"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:padding="10dp"
        android:text="Series Name"
        android:textColor="@color/color_heading_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerImage" />

    <!-- Play Button -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/playBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@+id/seriesName">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/series_play_button">

            <TextView
                android:id="@+id/playText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_500"
                android:paddingVertical="@dimen/_10sdp"
                android:text="PLAY NOW"
                android:textColor="@color/colorPrimary_black"
                android:textSize="@dimen/body"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_series_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/playText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Languages and Subtitles Info -->
    <TextView
        android:id="@+id/languageSubtitleInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_500"
        android:padding="10dp"
        android:text="@string/series_languages"
        android:textColor="@color/color_body_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playBtn"

        />
    <!-- RecyclerView for Grid Videos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"

        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languageSubtitleInfo"
        tools:listitem="@layout/series_video_vertical_item_view" />

</androidx.constraintlayout.motion.widget.MotionLayout>
