<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary_black">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingStart="@dimen/_12sdp"
            android:text="Series Name"
            android:textColor="@color/color_heading_text"
            android:textSize="@dimen/feed_main_title"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@id/title"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:visibility="visible"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/body"
            android:focusable="true"
            app:drawableRightCompat="@drawable/series_arrow" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:listitem="@layout/series_collection_horizontal_item_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
