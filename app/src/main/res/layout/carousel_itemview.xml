<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/carousel_layout"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:id="@+id/carousel_vp"
                    android:paddingEnd="@dimen/_30sdp"
                    android:paddingStart="@dimen/_30sdp"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                </androidx.viewpager2.widget.ViewPager2>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/carousel_tablayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/carousel_vp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="@dimen/_8sdp"
                    app:tabMode="fixed" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/carousel_shimmer_layout"
            android:orientation="vertical"
            android:visibility="gone"

            android:layout_height="wrap_content">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:id="@+id/carousel_shimmer"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/view25"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_130sdp"

                        android:background="@drawable/carousel_left"
                        app:layout_constraintBottom_toBottomOf="@+id/view27"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view27" />

                    <View
                        android:id="@+id/view27"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/carousel_center_bg"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/view26"
                        app:layout_constraintStart_toEndOf="@+id/view25"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view26"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:background="@drawable/carousel_right"
                        app:layout_constraintBottom_toBottomOf="@+id/view27"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view27" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>